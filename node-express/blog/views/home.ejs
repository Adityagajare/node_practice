<!DOCTYPE html>
<html lang="en">
<%- include("./partials/head.ejs")%>
<body>
    <%- include("./partials/nav.ejs") %>
    <div id="home">
            <% if (blogs.length>0) { %>
                <% blogs.forEach((blog)=>{ %>
                    <div id="homeblog">
                        <a href="/blog/<%= blog._id%>">
                            <h3><%= blog.title %></h3>
                            <p><%= blog.snippet %></p>
                        </a>
                    </div>
                  <% }) %>
              <% } else{%>
                <p>There is No blogs to be displayed</p>
                <% } %>
    </div>
    <%- include("./partials/footer.ejs") %>
</body>
</html>